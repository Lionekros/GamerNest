@model Support.AuthorModel

@{
    ViewData[ "Title" ] = "Admin - Create Authors";
}

<partial name="_LateralMenu" />

<main class="home-section">
    <div class="text">
        <h1>Authors</h1>
        <h2>@ViewData[ "TitleCreate" ]</h2>

        <section class="Createform">
            <form asp-controller="AdminAuthor" asp-action="Create" method="post" enctype="multipart/form-data">
                <partial name="_Error" />

                <div>
                    <div>
                        <label asp-for="name" class="required">Name:</label>
                        <input required asp-for="name" placeholder="Name" />
                    </div>
                    <div>
                        <label asp-for="firstLastName" class="required">First Last Name:</label>
                        <input required asp-for="firstLastName" placeholder="First Last Name" />
                    </div>
                    <div>
                        <label asp-for="secondLastName">Second Last Name:</label>
                        <input asp-for="secondLastName" placeholder="Second Last Name" />
                    </div>
                </div>

                <div>
                    <div>
                        <label asp-for="password" class="required">Password:</label>
                        <input required asp-for="password" type="password" placeholder="Password" />
                    </div>
                    <div>
                        <label asp-for="email" class="required">Email:</label>
                        <input required asp-for="email" placeholder="Email" />
                    </div>
                    <div>
                        <label asp-for="phone" class="required">Phone:</label>
                        <input required asp-for="phone" placeholder="Phone" />
                    </div>
                </div>

                <div>
                    <div>
                        <label asp-for="description">Description:</label>
                        <textarea asp-for="description" id="mytextarea"></textarea>
                    </div>
                </div>

                <div>
                    <div>
                        <label asp-for="avatar">Avatar:</label>
                        <input asp-for="avatar" type="file" />
                    </div>
                    <div>
                        <label asp-for="preferedLanguage" class="required">Preferred Language:</label>
                        <select asp-for="preferedLanguage" required>
                            <option value="ENG">English</option>
                            <option value="ESP">Español</option>
                        </select>
                    </div>
                </div>

                <div>
                    <div>
                        <label asp-for="isAdmin" class="required" >Is Admin:</label>
                        <select class="redSelect" onchange="selectColor(this)" asp-for="isAdmin" required>
                            <option class="redSelect" value="false">&#xf057;</option>
                            <option class="greenSelect" value="true">&#xf058;</option>
                        </select>
                    </div>
                    <div>
                        <label asp-for="canPublish" class="required">Can Publish:</label>
                        <select class="redSelect" onchange="selectColor(this)" asp-for="canPublish" required>
                            <option class="redSelect" value="false">&#xf057;</option>
                            <option class="greenSelect" value="true">&#xf058;</option>
                        </select>
                    </div>
                    <div>
                        <label asp-for="isActive" class="required">Is Active:</label>
                        <select class="greenSelect" onchange="selectColor(this)" asp-for="isActive" required>
                            <option class="greenSelect" value="true">&#xf058;</option>
                            <option class="redSelect" value="false">&#xf057;</option>
                        </select>
                    </div>
                </div>

                <div>
                    <div>
                        <label asp-for="birthday" class="required">Birthday:</label>
                        <input required asp-for="birthday" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div>
                        <label asp-for="startDate" class="required">Start Date:</label>
                        <input required asp-for="startDate" type="date" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div>
                        <label asp-for="endDate">End Date:</label>
                        <input asp-for="endDate" type="date" />
                    </div>
                </div>
                
                <div>
                    <div>
                        <button type="submit" class="mainButton">@ViewData[ "ButtonCreate" ]</button>
                    </div>
                    
                </div>

            </form>
        </section>


    </div>
</main>