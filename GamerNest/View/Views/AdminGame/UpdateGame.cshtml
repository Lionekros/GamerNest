@model Support.UpdateGameModel

@{
    ViewData[ "Title" ] = "Admin - Update Game";
}


<main class="home-section">
    <div class="text">
        <h1>Game</h1>
        <h2>@ViewData[ "TitleUpdate" ]</h2>

        @if ( ViewData[ "AdminType" ].ToString() == "Admin" )
        {
            <section class="Createform">
                <form asp-controller="AdminGame" asp-action="Update" method="post" enctype="multipart/form-data">
                    <partial name="_Error" />

                    <div>
                        <div>
                            <label asp-for="id">@ViewData[ "fId" ]:</label>
                            <input asp-for="id" placeholder="@ViewData[ "fId" ]" readonly />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="title">@ViewData[ "fTitle" ]:</label>
                            <input asp-for="title" placeholder="@ViewData[ "fTitle" ]" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <label asp-for="subtitle">@ViewData[ "fSubtitle" ]:</label>
                            <input asp-for="subtitle" placeholder="@ViewData[ "fSubtitle" ]" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <label asp-for="description">@ViewData[ "fDescription" ]:</label>
                            <textarea asp-for="description" id="mytextarea"></textarea>
                        </div>
                    </div>
                    <div>
                        <div>
                            <label asp-for="language">@ViewData[ "fLanguage" ]:</label>
                            <select asp-for="language" required>
                                <option value="ENG">English</option>
                                <option value="ESP">Español</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <div>
                            <label asp-for="cover">@ViewData[ "fCover" ]:</label>
                            <input asp-for="cover" type="file" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <label asp-for="releaseDate">@ViewData[ "fReleaseDate" ]:</label>
                            <input asp-for="releaseDate" type="date" />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="totalScore">@ViewData[ "fTotalScore" ]:</label>
                            <input asp-for="totalScore" type="number" value="0" readonly />
                        </div>
                    </div>
                    <div>
                        <div>
                            <input asp-for="isFav" type="text" value="false" readonly hidden />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="idDev">@ViewData[ "fDev" ]:</label>
                            <select asp-for="idDev" class="select2SingleForm" required>
                                @foreach ( var item in Model.devList )
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="idPublisher">@ViewData[ "fPublisher" ]:</label>
                            <select asp-for="idPublisher" class="select2SingleForm" required>
                                @foreach ( var item in Model.publisherList )
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="idPlatform">@ViewData[ "fPlatform" ]:</label>
                            <select asp-for="idPlatform" class="select2SingleForm" required>
                                @foreach ( var item in Model.platformList )
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            </select>
                        </div>
                    </div>


                    <div>
                        <div>
                            <label asp-for="idGenre" class="required">@ViewData[ "fGenresList" ]:</label>
                            <select asp-for="idGenre" class="select2SingleForm" required multiple="multiple">
                                @foreach ( var item in Model.genreList )
                                {
                                    <option value="@item.id">@item.name @item.language</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="idPlayerType" class="required">@ViewData[ "fPlayerTypesList" ]:</label>
                            <select asp-for="idPlayerType" class="select2SingleForm" required multiple="multiple">
                                @foreach ( var item in Model.playerTypeList )
                                {
                                    <option value="@item.id">@item.name @item.language</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="idLanguageGame" class="required">@ViewData[ "fGameLanguagesList" ]:</label>
                            <select asp-for="idLanguageGame" class="select2SingleForm" required multiple="multiple">
                                @foreach ( var item in Model.languageGameList )
                                {
                                    <option value="@item.id">@item.name @item.language</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div>
                        <div>
                            <button type="submit" class="mainButton">@ViewData[ "ButtonUpdate" ]</button>
                        </div>
                    </div>

                </form>
            </section>
        }

    </div>
</main>