@model Support.UpdateGenreTypeLanguageModel

@{
    ViewData[ "Title" ] = "Admin - Update Language";
}


<main class="home-section">
    <div class="text">
        <h1>Language</h1>
        <h2>@ViewData[ "TitleUpdate" ]</h2>

        @if ( ViewData[ "AdminType" ].ToString() == "Admin" )
        {
            <section class="Createform">
                <form asp-controller="AdminLanguage" asp-action="Update" method="post" enctype="multipart/form-data">
                    <partial name="_Error" />

                    <div>
                        <div>
                            <label asp-for="id">@ViewData[ "fId" ]:</label>
                            <input asp-for="id" placeholder="@ViewData[ "fId" ]" readonly />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="name">@ViewData[ "fName" ]:</label>
                            <input asp-for="name" placeholder="@ViewData[ "fName" ]" />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="language">@ViewData[ "fLanguage" ]:</label>
                            <select asp-for="language">
                                <option value="ENG">English</option>
                                <option value="ESP">Español</option>
                            </select>
                        </div>
                    </div>
                    <div>
                        <div>
                            <button type="submit" class="mainButton">@ViewData[ "ButtonUpdate" ]</button>
                        </div>
                    </div>

                </form>
            </section>
        }

    </div>
</main>