@if ( ViewData[ "AdminType" ].ToString() != "Admin" )
{
    <nav class="sidebar">
        <div class="logo-details">
            <img class="" src="~/img/Banner/Logo.png" alt="Banner">
            <div class="logo_name">Gamer Nest</div>
            <i class="fa-solid fa-bars" id="btn"></i>
        </div>
        <ul class="nav-list">
            <li class="@((ViewContext.RouteData.Values["action"].ToString() == "Index") ? "linkActive" : "")">
                <a asp-controller="Admin" asp-action="Index">
                    <i class="fa-solid fa-house"></i>
                    <span class="links_name">Home</span>
                </a>
                <span class="tooltip">Home</span>
            </li>
            <li class="@((ViewContext.RouteData.Values["action"].ToString() == "Authors") ? "linkActive" : "")">
                <a asp-controller="AdminAuthor" asp-action="Authors">
                    <i class="fa-solid fa-user-tie"></i>
                    <span class="links_name">Authors</span>
                </a>
                <span class="tooltip">Authors</span>
            </li>
            <li class="@((ViewContext.RouteData.Values["action"].ToString() == "Articles") ? "linkActive" : "")">
                <a asp-controller="AdminArticle" asp-action="Articles">
                    <i class="fa-solid fa-file-lines"></i>
                    <span class="links_name">Articles</span>
                </a>
                <span class="tooltip">Articles</span>
            </li>

            <li class="profile">
                <div class="profile-details">
                    <img class="" src="@ViewData["AdminAvatar"]" alt="Banner">
                    <div class="name_job">
                        <div class="name">@ViewData["AdminEmail"]</div>
                        <div class="job">@ViewData["AdminType"]</div>
                    </div>
                </div>
                <a asp-controller="Admin" asp-action="LogOut">
                    <i class="fa-solid fa-right-from-bracket" id="log_out"></i>
                </a>
            </li>
        </ul>
    </nav>
}
