@model Support.AdminLogIn
@{
    ViewData[ "Title" ] = "Admin - Login";
}

<header class="AdminHeader">
    <img src="~/img/Banner/Logo.png" alt="Logo" />
    <p>Gamer Nest</p>
</header>

<main class="AdminLogIn">
    <h1>@ViewData["AdminLoginTitle"]</h1>
    <section>
        <div class="form">
            <form asp-controller="Admin" asp-action="LogIn" method="post">
                @if (ViewBag.UsuMessage != null)
                {
                    <p class="error">@ViewBag.UsuMessage</p>
                }
                else if (ViewBag.Message != null)
                {
                    <p class="error">@ViewBag.Message</p>
                }

                <div>
                    <label asp-for="email">@ViewData["AdminLoginEmail"]:</label>
                    <input asp-for="email" placeholder="@ViewData["AdminLoginEmail"]" />
                </div>
                <div>
                    <label asp-for="email">@ViewData["AdminLoginPassword"]:</label>
                    <input asp-for="password" type="password" placeholder="@ViewData["AdminLoginPassword"]" />
                </div>
                <button type="submit" class="mainButton">@ViewData["AdminLoginButtonAccess"]</button>
            </form>
        </div>
    </section>
    <a asp-controller="Articles" asp-action="Index">
        <i class="fa-solid fa-arrow-left"></i>
        <span>@ViewData["AdminLoginButtonReturn"]</span>
    </a>
</main>