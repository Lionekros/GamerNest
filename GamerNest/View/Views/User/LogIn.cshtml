@model Support.UserLogInModel
@{
    ViewData[ "Title" ] = "LogIn";
}

<partial name="_NormalMenu" />

<main class="home-user">
    <div class="text">
        <section class="UserLogIn">
            <h1>Log In</h1>
            <section>
                <div class="form">
                    <form asp-controller="User" asp-action="LogIn" method="post">
                        <partial name="_Error" />

                        <div>
                            <label asp-for="username" class="required">@ViewData[ "Username" ]:</label>
                            <input asp-for="username" placeholder="@ViewData[ "Username" ]" required />
                        </div>
                        <div>
                            <label asp-for="password" class="required">@ViewData[ "Password" ]:</label>
                            <input asp-for="password" placeholder="@ViewData[ "Password" ]" type="password" required />
                        </div>

                        <button type="submit" class="mainButton">@ViewData[ "LogIn" ]</button>
                    </form>
                </div>
            </section>
            <a asp-controller="User" asp-action="JoinForm">
                <i class="fa-solid fa-arrow-left"></i>
                <span>@ViewData[ "Join" ]</span>
            </a>
        </section>
    </div>
</main>

<partial name="_Footer" />