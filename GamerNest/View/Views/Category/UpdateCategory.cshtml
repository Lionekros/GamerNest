@model Support.UpdateCategoryModel

@{
    ViewData[ "Title" ] = "Admin - Update Categorys";
}


<main class="home-section">
    <div class="text">
        <h1>Category</h1>
        <h2>@ViewData[ "TitleUpdate" ]</h2>

        @if ( ViewData[ "AdminType" ].ToString() == "Admin" )
        {
            <section class="Createform">
                <form asp-controller="Category" asp-action="Update" method="post" enctype="multipart/form-data">
                    <partial name="_Error" />

                    <div>
                        <div>
                            <label asp-for="id">@ViewData[ "tId" ]</label>
                            <input asp-for="id" placeholder="@ViewData[ "tId" ]" readonly />
                        </div>
                    </div>

                    <div>
                        <div>
                            <label asp-for="name">@ViewData[ "tName" ]</label>
                            <input asp-for="name" placeholder="@ViewData[ "tName" ]" />
                        </div>
                    </div>
                    <div>
                        <div>
                            <button type="submit" class="mainButton">@ViewData[ "ButtonUpdate" ]</button>
                        </div>
                    </div>

                </form>
            </section>
        }

    </div>
</main>